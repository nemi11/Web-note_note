<section class="banner" data-controller="carousel">
  <div class="carousel-container">
    <button class="prev" data-action="click->carousel#prevSlide">‹</button>

    <div data-carousel-target="slides" class="slides-wrapper">
      <div class="slide">Slide 1</div>
      <div class="slide">Slide 2</div>
      <div class="slide">Slide 3</div>
      <div class="slide">Slide 4</div>
      <div class="slide">Slide 5</div>
    </div>

    <button class="next" data-action="click->carousel#nextSlide">›</button>
  </div>

  <div data-carousel-target="dots" class="dots">
    <% 5.times do |i| %>
      <span class="dot" data-action="click->carousel#goToSlide" data-index="<%= i %>"></span>
    <% end %>
  </div>
</section>
